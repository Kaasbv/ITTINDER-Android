<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <ImageView
        android:id="@+id/item_chat_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/colorPrimary"
        android:contentDescription="@string/item_chat_photo"
        android:background="@color/colorPrimary"
        />

    <TextView
        android:id="@+id/item_chat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/item_chat_photo"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Oliver" />

    <TextView
        android:id="@+id/item_chat_last_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/item_chat_name"
        app:layout_constraintTop_toBottomOf="@id/item_chat_name"
        tools:text="Stealthy and witty. Better avoid in dark alleys." />

</androidx.constraintlayout.widget.ConstraintLayout>